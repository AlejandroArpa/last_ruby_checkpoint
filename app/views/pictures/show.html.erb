<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @picture %>

    <%= link_to t("pictures.edit"), edit_picture_path(@picture), class: "mt-2 rounded-lg py-3 px-5 bg-yellow-400 inline-block font-medium hover:bg-yellow-600" %>
    <%= link_to t("input_form.back"), pictures_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-300 inline-block font-medium hover:bg-blue-700" %>
    <div class="inline-block ml-2">
      <%= button_to t("pictures.delete"), @picture, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-400 font-medium hover:bg-red-700" %>
    </div>
  </div>
</div>
